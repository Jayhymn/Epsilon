<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".site.fragments.ConditionFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCond"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="1sp"
        app:layout_constraintBottom_toTopOf="@id/formLink"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHeight_default="spread"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/formLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recyclerCond"
        android:text="@string/fillForm"
        app:icon="@drawable/ic_link_24px"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon" />
</androidx.constraintlayout.widget.ConstraintLayout>